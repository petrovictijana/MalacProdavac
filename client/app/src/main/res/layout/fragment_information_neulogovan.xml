<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.neulogovan.HomeNeuloganFragment">

    <LinearLayout
        android:id="@+id/optionsInformationNeulogovan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:paddingLeft="22dp"
            android:paddingTop="27dp"
            android:text="O Aplikaciji"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="16dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                android:layout_margin="10dp">

                <Button
                    android:id="@+id/dugme1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/empty_button"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:paddingLeft="23dp"
                    android:paddingTop="3dp"
                    android:paddingRight="23dp"
                    android:paddingBottom="3dp"
                    android:text="Dobrodošli"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="TouchTargetSizeCheck"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/dugme2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/empty_button"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="23dp"
                    android:paddingTop="3dp"
                    android:paddingRight="23dp"
                    android:paddingBottom="3dp"
                    android:text="Kako radi naša aplikacija?"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="TouchTargetSizeCheck"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/dugme3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/empty_button"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="23dp"
                    android:paddingTop="3dp"
                    android:paddingRight="23dp"
                    android:paddingBottom="3dp"
                    android:text="Zašto koristite našu aplikaciju?"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="TouchTargetSizeCheck"
                    android:elevation="4dp"/>

                <Button
                    android:id="@+id/dugme4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/empty_button"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="23dp"
                    android:paddingTop="3dp"
                    android:paddingRight="23dp"
                    android:paddingBottom="3dp"
                    android:text="Kako se pridružiti našoj zajednici?"
                    android:textAllCaps="false"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="TouchTargetSizeCheck"
                    android:elevation="4dp"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/prvaInformacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/optionsInformationNeulogovan"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/naslov1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Dobrodošli na našu aplikaciju"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TextSizeCheck"
                />
            <TextView
                android:id="@+id/opis1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Dobrodošli u našu aplikaciju koja povezuje male proizvođače domaćih proizvoda, pouzdane dostavljače i pametne kupce. Naša misija je jednostavna - olakšati vam pristup kvalitetnim domaćim proizvodima direktno od proizvođača do vaših vrata. Sa nama, podržavate lokalne zajednice i uživate u autentičnim proizvodima iz vaše regije."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drugaInformacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/optionsInformationNeulogovan"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/naslov2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Kako radi naša aplikacija?"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TextSizeCheck"
                />
            <TextView
                android:id="@+id/opis2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Naša aplikacija je jednostavna za korišćenje. Proizvođači mogu jednostavno postaviti svoje proizvode, a svako, bez obzira na profesiju, može postati dostavljač. Kupci mogu pregledati širok izbor domaćih proizvoda. Bez obzira da li tražite sveže voće i povrće, zanatske proizvode ili ručno pravljene poslastice, mi imamo sve što vam je potrebno."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trecaInformacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/optionsInformationNeulogovan"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/naslov3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Zašto koristiti našu aplikaciju?"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TextSizeCheck"
                />
            <TextView
                android:id="@+id/opis3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="1. Podržite lokalne proizvođače: Kupovinom preko naše aplikacije podržavate lokalne proizvođače i male preduzetnike, pomažući lokalnoj ekonomiji."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/opis3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="2. Praktičnost na dlanu: Naša aplikacija vam omogućava da pregledate i kupite proizvode iz udobnosti svog doma ili dok ste u pokretu, pružajući vam praktičnost online kupovine."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/opis3_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="3. Sveži i Kvalitetni Proizvodi: Svi proizvodi koje možete pronaći na našoj aplikaciji su sveži, kvalitetni i pažljivo odabrani od strane naših domaćih proizvođača."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/opis3_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="4. Postanite Dostavljač: Bez obzira da li ste student, radnik ili freelancer, možete se pridružiti našoj zajednici kao dostavljač i doprineti bržoj i široj dostavi proizvoda našim kupcima."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cetvrtaInformacija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/optionsInformationNeulogovan"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/naslov4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Dobrodošli na našu aplikaciju"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:ignore="TextSizeCheck"
                />
            <TextView
                android:id="@+id/opis4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Pridružite se našoj zajednici već danas! Ako ste proizvođač domaćih proizvoda, postavite svoje proizvode na našu platformu. Ako želite doprineti kao dostavljač, jednostavno se registrujte i započnite sa dostavom proizvoda našim kupcima. Ako ste ljubitelj domaćih proizvoda, preuzmite našu aplikaciju, pregledajte proizvode i napravite svoj prvi nalog. Vaša podrška lokalnim proizvođačima i doprinos kao dostavljač je ključ očuvanja autentičnosti i raznovrsnosti naše zajednice."
                android:textColor="@color/grey"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/naslov5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Pravimo Razliku zajedno!"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="TextSizeCheck"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/full_fill_button_dark_blue"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="115dp"
                        android:layout_height="101dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/amico" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/ponuda_za_registraciju"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="4dp"
                        android:text="Mala proizvodnja velika zajednica. Postani i ti deo iste - Registruj se"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>