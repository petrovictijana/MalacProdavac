<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="go back"
            android:onClick="goToTheMainActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans"
            android:paddingLeft="2dp"
            android:paddingTop="19dp"
            android:paddingRight="54dp"
            android:paddingBottom="12dp"
            android:text="Registracija korisnika"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="61dp"
            tools:layout_editor_absoluteY="16dp" />

    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:srcCompat="@drawable/reg_1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite ime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Ime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti ime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite prezime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Prezime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti prezime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite korisni훾ko ime:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Korisni훾ko ime"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti korisni훾ko ime"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite email:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/input"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/error_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Morate uneti validnu email adresu"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Unesite lozinku:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

<!--            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:elevation="4dp"
                android:ems="10"
                >

                <EditText
                    android:id="@+id/password"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Lozinka"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/eye_password"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:onClick="showPassword"
                    app:srcCompat="@drawable/icons8_not_visible_96___"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    />
            </LinearLayout>
<!--            -->

            <TextView
                android:id="@+id/error_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Lozinka mora sadr탑ati velika, mala slova i brojeve"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Potvrdite lozinku:"
                android:textColor="@color/grey"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

<!--            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:elevation="4dp"
                android:ems="10"
                >

                <EditText
                    android:id="@+id/password_confirm"
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="Lozinka"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/eye_password_confirm"
                    android:layout_width="43dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:onClick="showPassword"
                    app:srcCompat="@drawable/icons8_not_visible_96___"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    />
            </LinearLayout>

<!--            -->

            <TextView
                android:id="@+id/error_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/inter_semibold"
                android:text="*Lozinke se moraju poklapati"
                android:textColor="@color/red"
                android:textSize="12dp"
                android:visibility="invisible"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/nastavi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="87dp"
                android:layout_marginEnd="87dp"
                android:background="@drawable/full_fill_button_disabled"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="@font/inter_medium"
                android:onClick="goToStep_2"
                android:paddingLeft="54dp"
                android:paddingTop="12dp"
                android:paddingRight="54dp"
                android:paddingBottom="12dp"
                android:text="Nastavi"
                android:textAllCaps="false"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>